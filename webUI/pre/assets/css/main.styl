// CONFIG
$scrollbar-disable = true

// colors
$secondary-color = #000

$main-color = #f33

$selection-color = alpha(#bdbdbd, 0.6)

@import 'config'
@import 'fonts'

// bootstrap4 @media definitions for easy responsiveness
sm = "screen and (min-width: 544px)"
md = "screen and (min-width: 768px)"
lg = "screen and (min-width: 992px)"
xl = "screen and (min-width: 1200px)"

body
	width 100%
	height 100%
	max-height 100vh

.arrows-container
	& #tl
		Z-index: -999
		visibility hidden
		opacity 0
		transition .6s opacity ease
		height 0
		&.visible
			visibility visible
			opacity 1
			transition .6s opacity ease
			height auto

	& #tr
		Z-index: -998
		visibility hidden
		opacity 0
		transition .6s opacity ease
		height 0
		&.visible
			visibility visible
			opacity 1
			transition .6s all ease
			height auto

	& #bl
		Z-index: -997
		visibility hidden
		opacity 0
		transition .6s opacity ease
		height 0
		&.visible
			visibility visible
			opacity 1
			transition .6s all ease
			height auto

	& #br
		Z-index: -996
		visibility hidden
		opacity 0
		transition .6s opacity ease
		height 0
		&.visible
			visibility visible
			opacity 1
			transition .6s all ease
			height auto


.arrow
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	z-index 1
	margin 0 auto !important
	& svg
		width 100%